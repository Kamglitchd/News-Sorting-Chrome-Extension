{
    "name": "News?",
    "description": "Chrome extension to tag opinion and news stories in google search from the Washington post.",
	"version": "0.1.0",
	"manifest_version": 2,

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "options_page": "options.html",

    "browser_action": {
        "default_icon": "news.png",
        "default_popup": "popup.html"
    },

    "permissions": [
        "https://google.com/*", 
        "http://google.com/*",
        "storage",
        "activeTab"
    ]
}